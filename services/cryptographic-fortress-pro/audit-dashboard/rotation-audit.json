{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "Prometheus datasource for rotation metrics",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    { "type": "grafana", "id": "grafana", "name": "Grafana", "version": "10.0.0" },
    { "type": "datasource", "id": "prometheus", "name": "Prometheus", "version": "1.0.0" },
    { "type": "panel", "id": "table", "name": "Table", "version": "" },
    { "type": "panel", "id": "timeseries", "name": "Time series", "version": "" },
    { "type": "panel", "id": "stat", "name": "Stat", "version": "" },
    { "type": "panel", "id": "barchart", "name": "Bar chart", "version": "" },
    { "type": "panel", "id": "gauge", "name": "Gauge", "version": "" }
  ],
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": { "type": "grafana", "uid": "-- Grafana --" },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "description": "Omni Quantum Elite — Secret Rotation Audit: timelines, upcoming rotations, failures, history, and certificate expiry tracking",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [
    {
      "asDropdown": false,
      "icon": "external link",
      "includeVars": true,
      "keepTime": true,
      "tags": ["omni-quantum"],
      "targetBlank": true,
      "title": "Related Dashboards",
      "type": "dashboards"
    }
  ],
  "panels": [
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "id": 100,
      "title": "Rotation Overview",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "description": "Total secrets managed by the rotation agent",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": { "steps": [{ "color": "blue", "value": null }] },
          "unit": "short"
        }
      },
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 1 },
      "id": 1,
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "auto",
        "textMode": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "count(secret_rotation_last_success)",
          "legendFormat": "Managed Secrets",
          "refId": "A"
        }
      ],
      "title": "Managed Secrets",
      "type": "stat"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "description": "Secrets successfully rotated in the last 24 hours",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 10 }
            ]
          },
          "unit": "short"
        }
      },
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 1 },
      "id": 2,
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "auto",
        "textMode": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "count(secret_rotation_last_success > (time() - 86400))",
          "legendFormat": "Recent Rotations",
          "refId": "A"
        }
      ],
      "title": "Rotated (Last 24h)",
      "type": "stat"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "description": "Total rotation failures across all secrets",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 3 }
            ]
          },
          "unit": "short"
        }
      },
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 1 },
      "id": 3,
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "auto",
        "textMode": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "sum(secret_rotation_failures_total)",
          "legendFormat": "Total Failures",
          "refId": "A"
        }
      ],
      "title": "Total Failures",
      "type": "stat"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "description": "Number of secrets overdue for rotation",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 5 }
            ]
          },
          "unit": "short"
        }
      },
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 1 },
      "id": 4,
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "auto",
        "textMode": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "count(secret_next_rotation_timestamp < time())",
          "legendFormat": "Overdue",
          "refId": "A"
        }
      ],
      "title": "Overdue Rotations",
      "type": "stat"
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 5 },
      "id": 101,
      "title": "Panel 1: Rotation Timeline",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "description": "Last rotation timestamp per service/secret. Color coded: green = recent (within schedule), yellow = approaching rotation window, red = overdue.",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "custom": {
            "align": "auto",
            "cellOptions": { "type": "auto" },
            "inspect": false
          },
          "thresholds": {
            "steps": [{ "color": "text", "value": null }]
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Last Rotated" },
            "properties": [
              { "id": "unit", "value": "dateTimeFromNow" }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Next Rotation" },
            "properties": [
              { "id": "unit", "value": "dateTimeFromNow" }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Status" },
            "properties": [
              {
                "id": "mappings",
                "value": [
                  { "options": { "0": { "color": "green", "text": "OK" } }, "type": "value" },
                  { "options": { "1": { "color": "yellow", "text": "APPROACHING" } }, "type": "value" },
                  { "options": { "2": { "color": "red", "text": "OVERDUE" } }, "type": "value" }
                ]
              },
              { "id": "custom.cellOptions", "value": { "mode": "gradient", "type": "color-background" } }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Duration" },
            "properties": [
              { "id": "unit", "value": "s" }
            ]
          }
        ]
      },
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 6 },
      "id": 10,
      "options": {
        "cellHeight": "sm",
        "footer": { "countRows": true, "fields": "", "reducer": ["count"], "show": true },
        "showHeader": true,
        "sortBy": [{ "desc": false, "displayName": "Next Rotation" }]
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "secret_rotation_last_success * 1000",
          "format": "table",
          "legendFormat": "",
          "refId": "A",
          "instant": true
        },
        {
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "secret_next_rotation_timestamp * 1000",
          "format": "table",
          "legendFormat": "",
          "refId": "B",
          "instant": true
        },
        {
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "clamp(ceil((time() - secret_next_rotation_timestamp) / abs(time() - secret_next_rotation_timestamp + 0.001)), 0, 2)",
          "format": "table",
          "legendFormat": "",
          "refId": "C",
          "instant": true
        },
        {
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "secret_rotation_duration_seconds",
          "format": "table",
          "legendFormat": "",
          "refId": "D",
          "instant": true
        }
      ],
      "title": "Panel 1: Rotation Timeline — Last Rotation per Service",
      "transformations": [
        { "id": "merge", "options": {} },
        {
          "id": "organize",
          "options": {
            "excludeByName": { "Time": true, "__name__": true, "instance": true, "job": true },
            "renameByName": {
              "service": "Service",
              "secret": "Secret",
              "Value #A": "Last Rotated",
              "Value #B": "Next Rotation",
              "Value #C": "Status",
              "Value #D": "Duration"
            }
          }
        }
      ],
      "type": "table"
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 16 },
      "id": 102,
      "title": "Panel 2: Upcoming Rotations",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "description": "Secrets sorted by next rotation date. Highlights anything within 7 days with warning colors.",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "custom": {
            "align": "auto",
            "cellOptions": { "type": "auto" },
            "inspect": false
          },
          "thresholds": {
            "steps": [{ "color": "text", "value": null }]
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Days Until Rotation" },
            "properties": [
              { "id": "unit", "value": "short" },
              { "id": "custom.cellOptions", "value": { "mode": "gradient", "type": "gauge" } },
              {
                "id": "thresholds",
                "value": {
                  "steps": [
                    { "color": "red", "value": null },
                    { "color": "yellow", "value": 7 },
                    { "color": "green", "value": 14 }
                  ]
                }
              },
              { "id": "min", "value": 0 },
              { "id": "max", "value": 180 }
            ]
          }
        ]
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 17 },
      "id": 20,
      "options": {
        "cellHeight": "sm",
        "footer": { "countRows": false, "fields": "", "reducer": [], "show": false },
        "showHeader": true,
        "sortBy": [{ "desc": false, "displayName": "Days Until Rotation" }]
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "(secret_next_rotation_timestamp - time()) / 86400",
          "format": "table",
          "legendFormat": "",
          "refId": "A",
          "instant": true
        }
      ],
      "title": "Panel 2: Upcoming Rotations (sorted by urgency)",
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": { "Time": true, "__name__": true, "instance": true, "job": true },
            "renameByName": {
              "service": "Service",
              "secret": "Secret",
              "Value": "Days Until Rotation"
            }
          }
        }
      ],
      "type": "table"
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 25 },
      "id": 103,
      "title": "Panel 3: Failed Rotations",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "description": "All secrets that have experienced rotation failures. Shows total failure count per service/secret.",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "custom": {
            "align": "auto",
            "cellOptions": { "type": "auto" },
            "inspect": false
          },
          "thresholds": {
            "steps": [{ "color": "text", "value": null }]
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Failures" },
            "properties": [
              { "id": "custom.cellOptions", "value": { "mode": "gradient", "type": "gauge" } },
              { "id": "color", "value": { "mode": "continuous-reds" } },
              { "id": "min", "value": 0 },
              { "id": "max", "value": 10 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Last Success" },
            "properties": [
              { "id": "unit", "value": "dateTimeFromNow" }
            ]
          }
        ]
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 26 },
      "id": 30,
      "options": {
        "cellHeight": "sm",
        "footer": { "countRows": false, "fields": "", "reducer": ["sum"], "show": true },
        "showHeader": true,
        "sortBy": [{ "desc": true, "displayName": "Failures" }]
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "secret_rotation_failures_total > 0",
          "format": "table",
          "legendFormat": "",
          "refId": "A",
          "instant": true
        },
        {
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "secret_rotation_last_success * 1000 and secret_rotation_failures_total > 0",
          "format": "table",
          "legendFormat": "",
          "refId": "B",
          "instant": true
        }
      ],
      "title": "Panel 3: Failed Rotations",
      "transformations": [
        { "id": "merge", "options": {} },
        {
          "id": "organize",
          "options": {
            "excludeByName": { "Time": true, "__name__": true, "instance": true, "job": true },
            "renameByName": {
              "service": "Service",
              "secret": "Secret",
              "Value #A": "Failures",
              "Value #B": "Last Success"
            }
          }
        }
      ],
      "type": "table"
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 34 },
      "id": 104,
      "title": "Panel 4: Rotation History",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "description": "Number of secret rotations performed per day over time. Spikes indicate bulk rotation events.",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "axisBorderShow": false,
            "axisColorMode": "text",
            "axisLabel": "Rotations",
            "drawStyle": "bars",
            "fillOpacity": 80,
            "gradientMode": "scheme",
            "lineWidth": 1,
            "stacking": { "group": "A", "mode": "normal" }
          },
          "unit": "short"
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Successful" },
            "properties": [
              { "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Failed" },
            "properties": [
              { "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }
            ]
          }
        ]
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 35 },
      "id": 40,
      "options": {
        "legend": { "calcs": ["sum"], "displayMode": "table", "placement": "bottom" },
        "tooltip": { "mode": "multi", "sort": "desc" }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "count(changes(secret_rotation_last_success[1d]) > 0)",
          "legendFormat": "Successful",
          "refId": "A"
        },
        {
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "sum(increase(secret_rotation_failures_total[1d]))",
          "legendFormat": "Failed",
          "refId": "B"
        }
      ],
      "title": "Panel 4: Rotation History — Rotations per Day",
      "type": "timeseries"
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 43 },
      "id": 105,
      "title": "Panel 5: Certificate Expiry",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "description": "TLS certificate expiry countdown. All certificates issued by Vault PKI and monitored Let's Encrypt certs.",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "custom": {
            "align": "auto",
            "cellOptions": { "type": "auto" },
            "inspect": false
          },
          "thresholds": {
            "steps": [{ "color": "text", "value": null }]
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Days Until Expiry" },
            "properties": [
              { "id": "unit", "value": "short" },
              { "id": "custom.cellOptions", "value": { "mode": "gradient", "type": "gauge" } },
              {
                "id": "thresholds",
                "value": {
                  "steps": [
                    { "color": "red", "value": null },
                    { "color": "orange", "value": 14 },
                    { "color": "yellow", "value": 30 },
                    { "color": "green", "value": 60 }
                  ]
                }
              },
              { "id": "min", "value": 0 },
              { "id": "max", "value": 365 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Expiry Date" },
            "properties": [
              { "id": "unit", "value": "dateTimeAsIso" }
            ]
          }
        ]
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 44 },
      "id": 50,
      "options": {
        "cellHeight": "sm",
        "footer": { "countRows": false, "fields": "", "reducer": [], "show": false },
        "showHeader": true,
        "sortBy": [{ "desc": false, "displayName": "Days Until Expiry" }]
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "(x509_cert_not_after - time()) / 86400",
          "format": "table",
          "legendFormat": "",
          "refId": "A",
          "instant": true
        },
        {
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "x509_cert_not_after * 1000",
          "format": "table",
          "legendFormat": "",
          "refId": "B",
          "instant": true
        }
      ],
      "title": "Panel 5: TLS Certificate Expiry",
      "transformations": [
        { "id": "merge", "options": {} },
        {
          "id": "organize",
          "options": {
            "excludeByName": { "Time": true, "__name__": true, "instance": true, "job": true },
            "renameByName": {
              "cn": "Common Name",
              "issuer_cn": "Issuer",
              "serial_number": "Serial",
              "Value #A": "Days Until Expiry",
              "Value #B": "Expiry Date"
            }
          }
        }
      ],
      "type": "table"
    }
  ],
  "schemaVersion": 39,
  "tags": ["omni-quantum", "security", "secrets", "rotation", "certificates", "system-33"],
  "templating": {
    "list": [
      {
        "current": { "selected": true, "text": "All", "value": "$__all" },
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
        "definition": "label_values(secret_rotation_last_success, service)",
        "hide": 0,
        "includeAll": true,
        "label": "Service",
        "multi": true,
        "name": "service",
        "options": [],
        "query": "label_values(secret_rotation_last_success, service)",
        "refresh": 2,
        "regex": "",
        "skipUrlSync": false,
        "sort": 1,
        "type": "query"
      },
      {
        "current": { "selected": false, "text": "Prometheus", "value": "prometheus" },
        "hide": 2,
        "includeAll": false,
        "label": "Datasource",
        "multi": false,
        "name": "DS_PROMETHEUS",
        "options": [],
        "query": "prometheus",
        "refresh": 1,
        "regex": "",
        "skipUrlSync": false,
        "type": "datasource"
      }
    ]
  },
  "time": { "from": "now-30d", "to": "now" },
  "timepicker": {
    "refresh_intervals": ["1m", "5m", "15m", "30m", "1h"]
  },
  "timezone": "browser",
  "title": "Omni Quantum — Secret Rotation Audit",
  "uid": "omni-rotation-audit",
  "version": 1
}
