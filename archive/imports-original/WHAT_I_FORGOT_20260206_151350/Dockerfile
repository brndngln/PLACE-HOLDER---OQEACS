FROM python:3.12-slim

LABEL maintainer="Omni Quantum Elite"
LABEL omni.quantum.component="master-orchestrator"
LABEL omni.quantum.system="37"

WORKDIR /app

# System deps
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Python deps
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# App code
COPY . .

# Non-root user
RUN useradd -m -r omni && chown -R omni:omni /app
USER omni

EXPOSE 9500

HEALTHCHECK --interval=30s --timeout=10s --start-period=20s --retries=3 \
    CMD curl -f http://localhost:9500/health || exit 1

CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "9500", "--workers", "2"]
